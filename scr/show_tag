#! /usr/bin/env python
import os
import sys

import ide

import abjad

directory = os.getcwd()
directory = ide.Path(directory)

if len(sys.argv) < 2:
    print("Missing mandatory tag parameter ...")
    sys.exit(-1)

undo = "--undo" in sys.argv[2:]

string = sys.argv[1]
tag = abjad.Tag(string)
job = ide.jobs.show_tag(directory, tag, undo=undo)
job = abjad.new(job, message_zero=True)
for message in job():
    print(message)
