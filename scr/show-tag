#! /usr/bin/env python
import os
import sys

import baca

if __name__ == "__main__":
    directory = os.getcwd()
    arguments = baca.build.arguments("--tag", "--undo")
    if not arguments.tag:
        print("Missing mandatory tag parameter ...")
        sys.exit(-1)
    baca.build.show_tag(directory, arguments.tag, undo=arguments.undo)
