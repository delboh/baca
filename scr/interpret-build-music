#! /usr/bin/env python
import os
import pathlib

import baca

if __name__ == "__main__":
    directory = os.getcwd()
    directory = pathlib.Path(directory)
    arguments = baca.build.arguments("--debug-segments", "--skip-segment-collection")
    baca.build.interpret_build_music(
        directory,
        debug_segments=arguments.debug_segments,
        skip_segment_collection=arguments.skip_segment_collection,
    )
